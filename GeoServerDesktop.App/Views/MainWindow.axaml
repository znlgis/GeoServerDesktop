<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:GeoServerDesktop.App.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
        x:Class="GeoServerDesktop.App.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="GeoServer Desktop"
        Width="1200"
        Height="800">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Grid RowDefinitions="Auto,*,Auto">
        <!-- Top Connection Panel -->
        <Border Grid.Row="0" Background="#F5F5F5" Padding="10" BorderBrush="#CCCCCC" BorderThickness="0,0,0,1">
            <StackPanel Orientation="Horizontal" Spacing="10">
                <TextBlock Text="Base URL:" VerticalAlignment="Center"/>
                <TextBox Text="{Binding BaseUrl}" Width="300" IsEnabled="{Binding !IsConnected}"/>
                
                <TextBlock Text="Username:" VerticalAlignment="Center"/>
                <TextBox Text="{Binding Username}" Width="100" IsEnabled="{Binding !IsConnected}"/>
                
                <TextBlock Text="Password:" VerticalAlignment="Center"/>
                <TextBox Text="{Binding Password}" Width="100" PasswordChar="*" IsEnabled="{Binding !IsConnected}"/>
                
                <Button Content="Connect" 
                        Command="{Binding ConnectCommand}" 
                        IsVisible="{Binding !IsConnected}"
                        HorizontalAlignment="Left"/>
                
                <Button Content="Disconnect" 
                        Command="{Binding DisconnectCommand}" 
                        IsVisible="{Binding IsConnected}"
                        HorizontalAlignment="Left"/>
                
                <Button Content="ðŸ”„ Refresh" 
                        Command="{Binding RefreshResourcesCommand}" 
                        IsVisible="{Binding IsConnected}"
                        ToolTip.Tip="Refresh resources"
                        HorizontalAlignment="Left"/>
            </StackPanel>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Row="1" ColumnDefinitions="300,*">
            <!-- Left Panel - Resource Tree -->
            <Border Grid.Column="0" BorderBrush="#CCCCCC" BorderThickness="0,0,1,0" Padding="5">
                <DockPanel>
                    <TextBlock DockPanel.Dock="Top" Text="Resources" FontWeight="Bold" Margin="0,0,0,10"/>
                    <TreeView ItemsSource="{Binding ResourceTree}" 
                              SelectedItem="{Binding SelectedNode}">
                        <TreeView.ItemTemplate>
                            <TreeDataTemplate ItemsSource="{Binding Children}">
                                <TextBlock Text="{Binding Name}"/>
                            </TreeDataTemplate>
                        </TreeView.ItemTemplate>
                    </TreeView>
                </DockPanel>
            </Border>

            <!-- Right Panel - Tabbed Content -->
            <Border Grid.Column="1">
                <TabControl>
                    <!-- Overview Tab -->
                    <TabItem Header="Overview">
                        <Border Padding="10">
                            <StackPanel>
                                <TextBlock Text="Welcome to GeoServer Desktop" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>
                                <TextBlock Text="Connect to a GeoServer instance to begin managing resources." TextWrapping="Wrap"/>
                                
                                <StackPanel Margin="0,30,0,0" IsVisible="{Binding IsConnected}">
                                    <TextBlock Text="Connected to GeoServer" FontWeight="Bold" Margin="0,0,0,10"/>
                                    <TextBlock Text="{Binding BaseUrl}" Margin="0,0,0,20"/>
                                    
                                    <TextBlock Text="Features:" FontWeight="Bold" Margin="0,0,0,10"/>
                                    <TextBlock Text="â€¢ Manage workspaces, data stores, and layers" Margin="20,0,0,5"/>
                                    <TextBlock Text="â€¢ Upload and manage styles" Margin="20,0,0,5"/>
                                    <TextBlock Text="â€¢ Create and organize layer groups" Margin="20,0,0,5"/>
                                    <TextBlock Text="â€¢ Preview layers with WMS integration" Margin="20,0,0,5"/>
                                    <TextBlock Text="â€¢ View feature types and publish layers" Margin="20,0,0,5"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </TabItem>
                    
                    <!-- Map Preview Tab -->
                    <TabItem Header="Map Preview">
                        <ContentControl Content="{Binding MapPreviewViewModel}"/>
                    </TabItem>
                    
                    <!-- Workspace Management Tab -->
                    <TabItem Header="Workspaces">
                        <ContentControl Content="{Binding WorkspaceManagementViewModel}"/>
                    </TabItem>
                    
                    <!-- Style Management Tab -->
                    <TabItem Header="Styles">
                        <ContentControl Content="{Binding StyleManagementViewModel}"/>
                    </TabItem>
                    
                    <!-- Details Tab -->
                    <TabItem Header="Details">
                        <Border Padding="10">
                            <StackPanel>
                                <TextBlock Text="Resource Details" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>
                                <TextBlock Text="Select a resource from the tree to view its details."
                                           TextWrapping="Wrap"
                                           IsVisible="{Binding !SelectedNode}"/>
                                
                                <StackPanel IsVisible="{Binding !!SelectedNode}">
                                    <TextBlock Text="Name:" FontWeight="Bold" Margin="0,0,0,5"/>
                                    <TextBlock Text="{Binding SelectedNode.Name}" Margin="0,0,0,15"/>
                                    
                                    <TextBlock Text="Type:" FontWeight="Bold" Margin="0,0,0,5"/>
                                    <TextBlock Text="{Binding SelectedNode.Type}" Margin="0,0,0,15"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </TabItem>
                </TabControl>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#F5F5F5" Padding="10" BorderBrush="#CCCCCC" BorderThickness="0,1,0,0">
            <TextBlock Text="{Binding StatusMessage}" VerticalAlignment="Center"/>
        </Border>
    </Grid>
</Window>
