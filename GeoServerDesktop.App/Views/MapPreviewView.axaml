<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:GeoServerDesktop.App.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="GeoServerDesktop.App.Views.MapPreviewView"
             x:DataType="vm:MapPreviewViewModel">
    
    <Design.DataContext>
        <vm:MapPreviewViewModel/>
    </Design.DataContext>

    <Grid RowDefinitions="Auto,*,Auto">
        <!-- Toolbar -->
        <Border Grid.Row="0" Background="#F5F5F5" Padding="5" BorderBrush="#CCCCCC" BorderThickness="0,0,0,1">
            <StackPanel Orientation="Horizontal" Spacing="5">
                <Button Content="ðŸ  Reset" 
                        Command="{Binding ZoomToExtentCommand}"
                        ToolTip.Tip="Reset view"/>
                <Button Content="ðŸ—‘ï¸ Clear" 
                        Command="{Binding ClearLayersCommand}"
                        ToolTip.Tip="Clear current layer"/>
                <Separator Width="1" Height="20" Background="#CCCCCC" Margin="5,0"/>
                <TextBlock Text="{Binding StatusMessage}" 
                           VerticalAlignment="Center"
                           Foreground="#666666"/>
            </StackPanel>
        </Border>

        <!-- Content Area -->
        <Border Grid.Row="1" BorderBrush="#CCCCCC" BorderThickness="1" Background="White" Padding="20">
            <Grid>
                <!-- Map placeholder or WMS information -->
                <ScrollViewer>
                    <StackPanel Spacing="20">
                        <TextBlock Text="Map Preview" 
                                   FontSize="24" 
                                   FontWeight="Bold"/>
                        
                        <TextBlock Text="This view provides WMS layer preview capabilities."
                                   TextWrapping="Wrap"
                                   FontSize="14"/>
                        
                        <StackPanel Spacing="10" IsVisible="{Binding !!PreviewUrl}">
                            <TextBlock Text="Current Layer WMS URL:" 
                                       FontWeight="Bold"/>
                            <Border Background="#F5F5F5" 
                                    Padding="10" 
                                    BorderBrush="#CCCCCC" 
                                    BorderThickness="1"
                                    CornerRadius="4">
                                <SelectableTextBlock Text="{Binding PreviewUrl}"
                                                     TextWrapping="Wrap"
                                                     FontFamily="Consolas,Courier New,monospace"
                                                     FontSize="12"/>
                            </Border>
                            
                            <TextBlock Text="You can use this URL in GIS applications like QGIS, ArcGIS, or web mapping libraries."
                                       TextWrapping="Wrap"
                                       FontSize="12"
                                       Foreground="#666666"/>
                        </StackPanel>
                        
                        <StackPanel Spacing="10" IsVisible="{Binding !PreviewUrl}">
                            <TextBlock Text="How to Preview Layers:" 
                                       FontWeight="Bold"
                                       FontSize="16"
                                       Margin="0,20,0,0"/>
                            <TextBlock Text="1. Connect to a GeoServer instance"
                                       Margin="20,0,0,0"/>
                            <TextBlock Text="2. Select a layer from the resource tree"
                                       Margin="20,0,0,0"/>
                            <TextBlock Text="3. The WMS URL will be generated and displayed here"
                                       Margin="20,0,0,0"/>
                            <TextBlock Text="4. Use the URL in your preferred GIS client"
                                       Margin="20,0,0,0"/>
                        </StackPanel>
                        
                        <!-- Loading overlay -->
                        <StackPanel IsVisible="{Binding IsLoading}"
                                    HorizontalAlignment="Center">
                            <TextBlock Text="Loading..." 
                                       FontSize="16" 
                                       FontWeight="Bold"
                                       HorizontalAlignment="Center"/>
                            <ProgressBar IsIndeterminate="True" 
                                         Width="200" 
                                         Margin="0,10,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- Info panel -->
        <Border Grid.Row="2" Background="#F5F5F5" Padding="10" BorderBrush="#CCCCCC" BorderThickness="0,1,0,0">
            <Grid ColumnDefinitions="Auto,*">
                <TextBlock Grid.Column="0" 
                           Text="Map Preview" 
                           FontWeight="Bold" 
                           Margin="0,0,20,0"/>
                <TextBlock Grid.Column="1" 
                           Text="WMS layer preview with URL generation for external GIS applications"
                           Foreground="#666666"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
