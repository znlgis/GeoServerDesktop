<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:GeoServerDesktop.App.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="GeoServerDesktop.App.Views.StyleManagementView"
             x:DataType="vm:StyleManagementViewModel">

    <Design.DataContext>
        <vm:StyleManagementViewModel/>
    </Design.DataContext>

    <Grid RowDefinitions="Auto,*,Auto">
        <!-- Header -->
        <Border Grid.Row="0" Background="#F5F5F5" Padding="10" BorderBrush="#CCCCCC" BorderThickness="0,0,0,1">
            <StackPanel Orientation="Horizontal" Spacing="10">
                <TextBlock Text="Style Management" 
                           FontSize="18" 
                           FontWeight="Bold" 
                           VerticalAlignment="Center"/>
                <Button Content="ðŸ”„ Refresh" 
                        Command="{Binding LoadStylesCommand}"
                        ToolTip.Tip="Reload styles"/>
            </StackPanel>
        </Border>

        <!-- Content -->
        <Grid Grid.Row="1" ColumnDefinitions="250,*">
            <!-- Style List -->
            <Border Grid.Column="0" Padding="10" BorderBrush="#CCCCCC" BorderThickness="0,0,1,0">
                <DockPanel>
                    <TextBlock DockPanel.Dock="Top" 
                               Text="Existing Styles" 
                               FontWeight="Bold" 
                               Margin="0,0,0,10"/>
                    <ListBox ItemsSource="{Binding Styles}"
                             SelectedItem="{Binding SelectedStyle}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <TextBlock Text="{Binding}" Padding="5"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </DockPanel>
            </Border>

            <!-- Editor Panel -->
            <Border Grid.Column="1" Padding="10">
                <DockPanel>
                    <!-- Actions -->
                    <Border DockPanel.Dock="Top" Padding="0,0,0,10">
                        <Grid ColumnDefinitions="*,Auto,Auto,Auto,Auto">
                            <TextBox Grid.Column="0" 
                                     Text="{Binding NewStyleName}" 
                                     Watermark="Style name"
                                     Margin="0,0,10,0"/>
                            <Button Grid.Column="1" 
                                    Content="Load Selected" 
                                    Command="{Binding LoadStyleContentCommand}"
                                    Margin="0,0,5,0"/>
                            <Button Grid.Column="2" 
                                    Content="Sample SLD" 
                                    Command="{Binding CreateSampleSldCommand}"
                                    Margin="0,0,5,0"/>
                            <Button Grid.Column="3" 
                                    Content="Upload/Update" 
                                    Command="{Binding UploadStyleCommand}"
                                    Background="#CCFFCC"
                                    Margin="0,0,5,0"/>
                            <Button Grid.Column="4" 
                                    Content="Delete" 
                                    Command="{Binding DeleteStyleCommand}"
                                    Background="#FFCCCC"
                                    IsEnabled="{Binding !!SelectedStyle}"/>
                        </Grid>
                    </Border>

                    <!-- SLD Editor -->
                    <DockPanel>
                        <TextBlock DockPanel.Dock="Top" 
                                   Text="SLD Content" 
                                   FontWeight="Bold" 
                                   Margin="0,0,0,10"/>
                        <Border BorderBrush="#CCCCCC" 
                                BorderThickness="1" 
                                CornerRadius="4">
                            <TextBox Text="{Binding SldContent}"
                                     AcceptsReturn="True"
                                     TextWrapping="NoWrap"
                                     FontFamily="Consolas,Courier New,monospace"
                                     FontSize="12"
                                     Watermark="Enter SLD XML content here..."/>
                        </Border>
                    </DockPanel>
                </DockPanel>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#F5F5F5" Padding="10" BorderBrush="#CCCCCC" BorderThickness="0,1,0,0">
            <Grid ColumnDefinitions="*,Auto">
                <TextBlock Grid.Column="0" 
                           Text="{Binding StatusMessage}" 
                           VerticalAlignment="Center"/>
                <ProgressBar Grid.Column="1" 
                             IsIndeterminate="True" 
                             Width="100"
                             IsVisible="{Binding IsLoading}"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
