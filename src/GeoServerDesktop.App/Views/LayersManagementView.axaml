<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:GeoServerDesktop.App.ViewModels"
             mc:Ignorable="d" d:DesignWidth="900" d:DesignHeight="700"
             x:Class="GeoServerDesktop.App.Views.LayersManagementView"
             x:DataType="vm:LayersManagementViewModel">

    <Design.DataContext>
        <vm:LayersManagementViewModel/>
    </Design.DataContext>

    <Grid RowDefinitions="Auto,*,Auto">
        <!-- Header -->
        <Border Grid.Row="0" Background="#F5F5F5" Padding="15" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
            <Grid ColumnDefinitions="*,Auto">
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Layers" 
                               FontSize="24" 
                               FontWeight="Bold"/>
                    <TextBlock Text="Manage published vector and raster layers" 
                               FontSize="13"
                               Foreground="#666666"
                               Margin="0,5,0,0"/>
                </StackPanel>
                <Button Grid.Column="1" 
                        Content="ðŸ”„ Refresh" 
                        Command="{Binding LoadLayersCommand}"
                        VerticalAlignment="Center"
                        Padding="12,6"/>
            </Grid>
        </Border>

        <!-- Content -->
        <Grid Grid.Row="1" ColumnDefinitions="250,*" Margin="10">
            <!-- Workspace Selector -->
            <Border Grid.Column="0" 
                    BorderBrush="#E0E0E0" 
                    BorderThickness="1" 
                    Padding="10"
                    Margin="0,0,10,0"
                    Background="White"
                    CornerRadius="4">
                <DockPanel>
                    <StackPanel DockPanel.Dock="Top" Margin="0,0,0,10">
                        <TextBlock Text="Workspace" 
                                   FontWeight="Bold" 
                                   FontSize="14"
                                   Margin="0,0,0,5"/>
                        <TextBlock Text="Select a workspace to filter layers" 
                                   FontSize="12"
                                   Foreground="#666666"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                    
                    <ListBox ItemsSource="{Binding Workspaces}"
                             SelectedItem="{Binding SelectedWorkspace}"
                             Background="Transparent">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="8,6" 
                                        Background="Transparent"
                                        CornerRadius="3">
                                    <TextBlock Text="{Binding}" FontSize="13"/>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </DockPanel>
            </Border>

            <!-- Layers List -->
            <Border Grid.Column="1" 
                    BorderBrush="#E0E0E0" 
                    BorderThickness="1" 
                    Padding="15"
                    Background="White"
                    CornerRadius="4">
                <DockPanel>
                    <StackPanel DockPanel.Dock="Top" Margin="0,0,0,15">
                        <TextBlock Text="Layers" 
                                   FontWeight="Bold" 
                                   FontSize="14"
                                   Margin="0,0,0,5"/>
                        <TextBlock Text="{Binding SelectedWorkspace, StringFormat='Filter: {0}'}" 
                                   FontSize="12"
                                   Foreground="#666666"
                                   IsVisible="{Binding !!SelectedWorkspace}"/>
                    </StackPanel>

                    <!-- Layer List -->
                    <Grid>
                        <TextBlock Text="Select a workspace to view layers" 
                                   FontSize="14"
                                   Foreground="#999999"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   IsVisible="{Binding !SelectedWorkspace}"/>

                        <ScrollViewer IsVisible="{Binding !!SelectedWorkspace}">
                            <ItemsControl ItemsSource="{Binding Layers}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderBrush="#E0E0E0" 
                                                BorderThickness="1" 
                                                Padding="15"
                                                Margin="0,0,0,10"
                                                Background="#FAFAFA"
                                                CornerRadius="4">
                                            <Grid ColumnDefinitions="*,Auto">
                                                <StackPanel Grid.Column="0" Spacing="5">
                                                    <TextBlock Text="{Binding Name}" 
                                                               FontWeight="Bold" 
                                                               FontSize="15"/>
                                                    <TextBlock Text="{Binding Type}" 
                                                               FontSize="12"
                                                               Foreground="#666666"/>
                                                    <StackPanel Orientation="Horizontal" Spacing="5">
                                                        <TextBlock Text="Default Style:" 
                                                                   FontSize="11"
                                                                   Foreground="#666666"/>
                                                        <TextBlock Text="{Binding DefaultStyle.Name}" 
                                                                   FontSize="11"
                                                                   Foreground="#2196F3"/>
                                                    </StackPanel>
                                                    <StackPanel Orientation="Horizontal" Spacing="5"
                                                                IsVisible="{Binding !!Resource.Name}">
                                                        <TextBlock Text="Resource:" 
                                                                   FontSize="11"
                                                                   Foreground="#666666"/>
                                                        <TextBlock Text="{Binding Resource.Name}" 
                                                                   FontSize="11"
                                                                   Foreground="#666666"/>
                                                    </StackPanel>
                                                </StackPanel>
                                                
                                                <StackPanel Grid.Column="1" 
                                                            Orientation="Horizontal" 
                                                            Spacing="5"
                                                            VerticalAlignment="Center">
                                                    <Button Content="Edit" 
                                                            Padding="10,5"
                                                            FontSize="12"/>
                                                    <Button Content="Delete" 
                                                            Padding="10,5"
                                                            FontSize="12"
                                                            Background="#F44336"
                                                            Foreground="White"
                                                            Click="OnDeleteLayerClick"
                                                            Tag="{Binding}"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>
                </DockPanel>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#F5F5F5" Padding="10,8" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0">
            <Grid ColumnDefinitions="*,Auto">
                <TextBlock Grid.Column="0" 
                           Text="{Binding StatusMessage}" 
                           VerticalAlignment="Center"
                           FontSize="12"/>
                <ProgressBar Grid.Column="1" 
                             Width="100"
                             Height="4"
                             IsIndeterminate="True"
                             IsVisible="{Binding IsLoading}"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
