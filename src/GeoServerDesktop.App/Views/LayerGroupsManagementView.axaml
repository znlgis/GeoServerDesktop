<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:GeoServerDesktop.App.ViewModels"
             mc:Ignorable="d" d:DesignWidth="900" d:DesignHeight="700"
             x:Class="GeoServerDesktop.App.Views.LayerGroupsManagementView"
             x:DataType="vm:LayerGroupsManagementViewModel">

    <Design.DataContext>
        <vm:LayerGroupsManagementViewModel/>
    </Design.DataContext>

    <Grid RowDefinitions="Auto,*,Auto">
        <!-- Header -->
        <Border Grid.Row="0" Background="#F5F5F5" Padding="15" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
            <Grid ColumnDefinitions="*,Auto,Auto">
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Layer Groups" 
                               FontSize="24" 
                               FontWeight="Bold"/>
                    <TextBlock Text="Manage layer groups to organize multiple layers together" 
                               FontSize="13"
                               Foreground="#666666"
                               Margin="0,5,0,0"/>
                </StackPanel>
                <Button Grid.Column="1" 
                        Content="âž• Create" 
                        Command="{Binding ShowCreateDialogCommand}"
                        VerticalAlignment="Center"
                        Padding="12,6"
                        Margin="0,0,10,0"/>
                <Button Grid.Column="2" 
                        Content="ðŸ”„ Refresh" 
                        Command="{Binding LoadLayerGroupsCommand}"
                        VerticalAlignment="Center"
                        Padding="12,6"/>
            </Grid>
        </Border>

        <!-- Content -->
        <Grid Grid.Row="1" ColumnDefinitions="250,*" Margin="10">
            <!-- Workspace Selector -->
            <Border Grid.Column="0" 
                    BorderBrush="#E0E0E0" 
                    BorderThickness="1" 
                    Padding="10"
                    Margin="0,0,10,0"
                    Background="White"
                    CornerRadius="4">
                <DockPanel>
                    <StackPanel DockPanel.Dock="Top" Margin="0,0,0,10">
                        <TextBlock Text="Workspace" 
                                   FontWeight="Bold" 
                                   FontSize="14"
                                   Margin="0,0,0,5"/>
                        <TextBlock Text="Select a workspace to filter layer groups" 
                                   FontSize="12"
                                   Foreground="#666666"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                    
                    <ListBox ItemsSource="{Binding Workspaces}"
                             SelectedItem="{Binding SelectedWorkspace}"
                             Background="Transparent">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="8,6" 
                                        Background="Transparent"
                                        CornerRadius="3">
                                    <TextBlock Text="{Binding}" FontSize="13"/>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </DockPanel>
            </Border>

            <!-- Layer Groups List -->
            <Border Grid.Column="1" 
                    BorderBrush="#E0E0E0" 
                    BorderThickness="1" 
                    Padding="15"
                    Background="White"
                    CornerRadius="4">
                <DockPanel>
                    <StackPanel DockPanel.Dock="Top" Margin="0,0,0,15">
                        <TextBlock Text="Layer Groups" 
                                   FontWeight="Bold" 
                                   FontSize="14"
                                   Margin="0,0,0,5"/>
                        <TextBlock Text="{Binding SelectedWorkspace, StringFormat='Filter: {0}'}" 
                                   FontSize="12"
                                   Foreground="#666666"
                                   IsVisible="{Binding !!SelectedWorkspace}"/>
                    </StackPanel>

                    <!-- Layer Group List -->
                    <Grid>
                        <TextBlock Text="Select a workspace to view layer groups" 
                                   FontSize="14"
                                   Foreground="#999999"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   IsVisible="{Binding !SelectedWorkspace}"/>

                        <ScrollViewer IsVisible="{Binding !!SelectedWorkspace}">
                            <ItemsControl ItemsSource="{Binding LayerGroups}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderBrush="#E0E0E0" 
                                                BorderThickness="1" 
                                                Padding="15"
                                                Margin="0,0,0,10"
                                                Background="#FAFAFA"
                                                CornerRadius="4">
                                            <Grid ColumnDefinitions="*,Auto">
                                                <StackPanel Grid.Column="0" Spacing="5">
                                                    <TextBlock Text="{Binding Name}" 
                                                               FontWeight="Bold" 
                                                               FontSize="15"/>
                                                    <TextBlock Text="{Binding Title}" 
                                                               FontSize="13"
                                                               Foreground="#666666"
                                                               IsVisible="{Binding !!Title}"/>
                                                    <StackPanel Orientation="Horizontal" Spacing="5">
                                                        <TextBlock Text="Mode:" 
                                                                   FontSize="11"
                                                                   Foreground="#666666"/>
                                                        <TextBlock Text="{Binding Mode}" 
                                                                   FontSize="11"
                                                                   Foreground="#2196F3"/>
                                                    </StackPanel>
                                                    <StackPanel Orientation="Horizontal" Spacing="5"
                                                                IsVisible="{Binding !!Workspace.Name}">
                                                        <TextBlock Text="Workspace:" 
                                                                   FontSize="11"
                                                                   Foreground="#666666"/>
                                                        <TextBlock Text="{Binding Workspace.Name}" 
                                                                   FontSize="11"
                                                                   Foreground="#666666"/>
                                                    </StackPanel>
                                                    <StackPanel Orientation="Horizontal" Spacing="5"
                                                                IsVisible="{Binding !!Publishables.Published.Length}">
                                                        <TextBlock Text="Layers:" 
                                                                   FontSize="11"
                                                                   Foreground="#666666"/>
                                                        <TextBlock Text="{Binding Publishables.Published.Length}" 
                                                                   FontSize="11"
                                                                   Foreground="#4CAF50"/>
                                                    </StackPanel>
                                                </StackPanel>
                                                
                                                <StackPanel Grid.Column="1" 
                                                            Orientation="Horizontal" 
                                                            Spacing="5"
                                                            VerticalAlignment="Center">
                                                    <Button Content="Edit" 
                                                            Padding="10,5"
                                                            FontSize="12"/>
                                                    <Button Content="Delete" 
                                                            Padding="10,5"
                                                            FontSize="12"
                                                            Background="#F44336"
                                                            Foreground="White"
                                                            Click="OnDeleteLayerGroupClick"
                                                            Tag="{Binding}"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>
                </DockPanel>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#F5F5F5" Padding="10,8" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0">
            <Grid ColumnDefinitions="*,Auto">
                <TextBlock Grid.Column="0" 
                           Text="{Binding StatusMessage}" 
                           VerticalAlignment="Center"
                           FontSize="12"/>
                <ProgressBar Grid.Column="1" 
                             Width="100"
                             Height="4"
                             IsIndeterminate="True"
                             IsVisible="{Binding IsLoading}"/>
            </Grid>
        </Border>

        <!-- Create Dialog Overlay -->
        <Border Grid.Row="0" Grid.RowSpan="3" 
                Background="#80000000" 
                IsVisible="{Binding IsCreateDialogVisible}"
                ZIndex="1000">
            <Border Background="White" 
                    Padding="20"
                    CornerRadius="8"
                    MaxWidth="400"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center">
                <StackPanel Spacing="15">
                    <TextBlock Text="Create Layer Group" 
                               FontSize="18" 
                               FontWeight="Bold"/>
                    
                    <StackPanel Spacing="5">
                        <TextBlock Text="Name *" FontWeight="Medium"/>
                        <TextBox Text="{Binding NewLayerGroupName}" 
                                 Watermark="Enter layer group name"/>
                    </StackPanel>
                    
                    <StackPanel Spacing="5">
                        <TextBlock Text="Title" FontWeight="Medium"/>
                        <TextBox Text="{Binding NewLayerGroupTitle}" 
                                 Watermark="Enter layer group title (optional)"/>
                    </StackPanel>
                    
                    <StackPanel Spacing="5">
                        <TextBlock Text="Workspace" FontWeight="Medium"/>
                        <TextBlock Text="{Binding SelectedWorkspace}" 
                                   FontSize="12"
                                   Foreground="#666666"/>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" 
                                Spacing="10" 
                                HorizontalAlignment="Right">
                        <Button Content="Cancel" 
                                Command="{Binding CancelCreateCommand}"
                                Padding="15,8"/>
                        <Button Content="Create" 
                                Command="{Binding CreateLayerGroupCommand}"
                                Background="#2196F3"
                                Foreground="White"
                                Padding="15,8"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Border>
    </Grid>
</UserControl>
